<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- EditText pentru specificarea cuvântului -->
    <EditText
        android:id="@+id/wordInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduceți un cuvânt"
        android:inputType="text" />

    <!-- EditText pentru dimensiunea minimă -->
    <EditText
        android:id="@+id/minLengthInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dimensiunea minimă"
        android:inputType="number" />

    <!-- Buton pentru inițierea cererii -->
    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caută Anagrame"
        android:layout_marginTop="16dp" />

    <!-- TextView pentru afișarea rezultatelor -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rezultatele vor fi afișate aici"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />
</LinearLayout>
